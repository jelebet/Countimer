// Include the Countimer library
#include <Countimer.h>

// Create a Countimer object
Countimer timer;

void setup() {
  // Initialize the serial communication
  Serial.begin(9600);
  
  // Set the timer duration in milliseconds (e.g., 1000ms = 1 second)
  timer.setInterval(1000);

  // Start the timer
  timer.start();
}

void loop() {
  // Check if the timer has elapsed
  if (timer.isFinished()) {
    // Your code to be executed when the timer elapses
    Serial.println("Timer elapsed!");
    
    // Reset the timer for the next interval
    timer.start();
  }

  // Your other code goes here
}
